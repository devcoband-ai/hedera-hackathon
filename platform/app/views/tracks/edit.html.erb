<h1 class="mb-4">Edit Track: "<%= @track.title %>"</h1>

<%= form_with(model: [@song, @track], class: "mb-4") do |f| %>
  <div class="mb-3">
    <%= f.label :title, class: "form-label" %>
    <%= f.text_field :title, class: "form-control", required: true %>
  </div>
  <div class="row">
    <div class="col-md-4 mb-3">
      <%= f.label :version, class: "form-label" %>
      <%= f.number_field :version, class: "form-control" %>
    </div>
  </div>
  <div class="mb-3">
    <%= f.label :notes, class: "form-label" %>
    <%= f.text_area :notes, class: "form-control", rows: 3 %>
  </div>
  <div class="mb-3">
    <%= f.label :file_path, "File Path", class: "form-label" %>
    <%= f.text_field :file_path, class: "form-control" %>
  </div>
  <div class="d-flex gap-2">
    <%= f.submit class: "btn btn-primary" %>
    <%= link_to "Cancel", song_path(@song), class: "btn btn-outline-secondary" %>
  </div>
<% end %>
